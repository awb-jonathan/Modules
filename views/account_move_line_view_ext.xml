            <field name="name">account.move.line.form.ext</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]/group[1]/group[1]" position="after">
                    <group string="Cost Allocation">
                        <field name="cost_allocation_id" invisible="1"/>
