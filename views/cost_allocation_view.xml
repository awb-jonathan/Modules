<odoo>
  <data>

    <!-- Form -->
    <record model="ir.ui.view" id="view_cost_allocation_form">
        <field name="name">view.cost.allocation.form</field>
        <field name="model">cost.allocation</field>
        <field name="arch" type="xml">
            <form string="Cost Allocation">
                <header>
                    <!-- Compute -->
                    <button name="action_cost_allocation_post"
                            type="object"
                            class="oe_highlight"
                            string="Compute"/>
                    <!-- Allocate-->
                    <button name="action_cost_allocation_post"
                            type="object"
                            class="oe_highlight"
                            string="Allocate"/>
                    <!-- Post -->
                    <button name="action_cost_allocation_post"
                            type="object"
                            class="oe_highlight"
                            string="Post"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,allocated,posted"/> 
                </header>
                <sheet>
                    <div class="oe_title">
                        <span class="o_form_label oe_edit_only">Name</span>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="application"/>
                            <field name="factor"/>
                            <field name="basis"/>
                        </group>
                        <group>
                            <field name="posted_date"/>
                            <field name="journal_id" domain="[('type', '=', 'general')]" widget="selection"/>
                            <field name="debit_account_id" widget="selection"/>
                            <field name="debit_analytic_account_ids" widget="many2many_tags"/>
                            <field name="credit_account_id" widget="selection"/>
                            <field name="credit_analytic_account_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Journal Items" id="cost_allocation_page_line">
                            <field name="cost_allocation_line">
                                <tree editable="bottom">
                                    <field name="account_id" widget="selection"/>
                                    <field name="partner_id" widget="selection"/>
                                    <field name="name" optional="show"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="values"/>
                                    <field name="share"/>

                                </tree>
                            </field>
                        </page>
                        <page string="Other Information">
                            <field name="description" placeholder="Description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List -->
    <record model='ir.ui.view' id='view_cost_allocation_tree'>
        <field name='name'>cost.allocation.tree</field>
        <field name='model'>cost.allocation</field>
        <field name='arch' type='xml'>
            <tree string='Cost allocation'>
                <field name='name'/>
                <field name='application'/>
                <field name='start_date'/>
                <field name='end_date'/>
                <field name='state'/>
            </tree>
        </field>
    </record>

    <!-- action -->
    <record id="view_cost_allocation_action" model="ir.actions.act_window">
        <field name="name">Cost Allocation</field>
        <field name="res_model">cost.allocation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MenuItem -->
    <menuitem id="cost_allocation_menu" 
        name="Cost Allocation"
        parent="account.menu_finance_entries_management"
        sequence="200"
        action="view_cost_allocation_action"/>
  </data>
</odoo>